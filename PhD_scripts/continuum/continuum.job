# Use E=6 for l=0,1 then E=5 for l=2,3 and E=4 for l=4,5,6
# Use noexp = nr. of Bessel functions + 1

cat > basis.data << EOF
 &INPUT
  TITLE='ANY  NEUTRAL MOLECULE (L=5) RMAT =15.0',
   lval=6, ECMAX = 4.00D0,  RLIM =17.0D0, /
 &END
EOF

#NOTE: parameters GEONUC and CHARG (given in the example
#~rmat/bin64/doc/numbas) are useless for Bessel function because the
